<div class="sidemenu">
  <h3>Search</h3>
  <div class="sections search">
    <form action="">
      <fieldset>
        <div class="input-group">
          <input
            placeholder="Search"
            type="text"
            class="ds-text-field form-control"
            name="query"
          />
          <button type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </fieldset>
    </form>
  </div>
  <h3>Quick links</h3>
  <ul class="sections quick-links">
    <li>
      <a href="/">Home</a>
    </li>
    <li><a href="/collections">Collections</a></li>
    <li><a href="/authors">Authors</a></li>
    <li><a href="/repositoryadmin/add">Add new document</a></li>
    <% if(currPage==='singledocument'){ %>
    <li>
      <a href="/calmconsultdocuments/<%=id %>/edit">Edit this document</a>
    </li>
    <li class="danger">
      <a id="delete-document" href="">Delete this document</a>
    </li>
    <% } %>
  </ul>
  <h3>Login</h3>
  <div class="sections login">
    <form action="/login">
      <div class="form-group">
        <label for="title">username</label>
        <input
          type="text"
          name="title"
          class="form-control"
          id="title"
          placeholder="username"
          required
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
      </div>
      <button class="calm-button" type="submit">
        Login <i class="fas fa-user-check"></i>
      </button>
    </form>
  </div>
</div>
