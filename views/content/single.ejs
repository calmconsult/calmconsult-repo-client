<% (layout('/layout/boilerplate')) %>
<div class="container single-document">
  <div class="row">
    <div class="col-lg-9">
      <h2><%=document.title %></h2>
      <div class="row">
        <div class="col-md-3">
          <div class="imgae">
            <img
              alt="No Thumbnail [100%x160]"
              data-src="holder.js/100%x160/text:No Thumbnail"
              style="height: 160px; width: 100%; display: block"
              src="data:image/svg+xml;base64,"
              data-holder-rendered="true"
            />
          </div>
          <div class="small-text date">
            <h5>Date:</h5>
            <%=document.publishDate %>
          </div>
          <div class="small-text document-link">
            <h5>Document link:</h5>
            <a href="<%=document.documentURL%>"> <%=document.contentKey %> </a>
          </div>
          <div class="small-text authors">
            <h5>Author(s):</h5>
            <p><span class="authorcapital"><%=document.authors %></span>,</p>
          </div>
          <div class="small-text type">
            <h5>Subject:</h5>
            <p><%=document.subject%></p>
          </div>
        </div>
        <div class="col-md-9">
          <h5 class="abstract-head">Abstract:</h5>
          <p class="small-text abstract"><%= document.abstract %></p>
          <div class="small-text document-uri">
            <h5>URI</h5>
            <a href="/calmconsultdocuments/<%=id  %> "
              >repository.calmconsultug.com/<%=id %>
            </a>
          </div>
          <div class="small-text collections">
            <h5>Collections</h5>
            <% for(const collection of document.collections.split(',')){ %>
            <a href="/collections/<%=collection%> "><%=collection %> </a>
            <%} %>
          </div>
        </div>
      </div>

      <div></div>
    </div>
    <div class="col-lg-3 d-none d-lg-block">
      <%-include('../partials/sidemenu2') %>
    </div>
  </div>
</div>
