<%(layout('/layout/boilerplate')) %>
<div class="container single-document">
  <div class="row">
    <div class="col-lg-9 cartegories">
      <h2>Showing search results of  <%=query %>  </h2>
      <ul class="recently-added-articles">
        <% for(const content of documents) {%>
        <li>
          <h4>
            <a href="/calmconsultdocuments/<%=content.id %> ">
              <%=content.title %>
            </a>
          </h4>
          <div class="article-muted text-muted">
            <span class="author">
              <small class="authorcapital"> <%= content.authors %> </small>

            </span>
            <span class="publisherDate">
              <small>
                (
                <span class="publisher"> Calm Consult </span>
                <span class="date"> <%=content.publishDate %> </span>
                )
              </small>
            </span>
          </div>
          <div class="article-abstract">
            <%=content.abstract%> 
          </div>
        </li>
        <% } %>
      </ul>
    </ul>
    <div class="pages-show">
      <p class="pr-2 d-none d-md-block">pages</p>
      <% if(pages || page > 1) {%>
        <% if(page>1){ %>
          <% if(searchMode){%>
          <a class="extend-show-more " href="/calmconsult/repoitorysearch/<%=(page-1)%>?query=<%=query%>&searchMode=<%=searchMode%>" >Prev</a>
          <%}else{%>
            <a class="extend-show-more " href="/calmconsult/repoitorysearch/<%=(page-1)%>?query=<%=query%>" >Prev</a>
          <%} %> 
          <p class="px-1">...</p>
        <%} %>     
        <% for(let i =page; i<=totalpages; i++){%>
          <% if (searchMode) {%>
            <a class="page-holder <%= page==i&&'active' %> " href="/calmconsult/repoitorysearch/<%=i%> ?query=<%=query%>&searchMode=<%=searchMode%>" ><%=i %> </a>
          <%}else{%>
            <a class="page-holder <%= page==i&&'active' %> " href="/calmconsult/repoitorysearch/<%=i%>?query=<%=query%>"><%=i %> </a>
          <% } %>
        <%} %>             
        <% if(page<pages) {%> 
          <p class="px-1">...</p>
          <% if(searchMode){%>
            <a class="extend-show-more " href="/calmconsult/repoitorysearch/<%=(page+1)%>?query=<%=query%>&searchMode=<%=searchMode%>" >Next</a>
            <%}else{%>
              <a class="extend-show-more " href="/calmconsult/repoitorysearch/<%=(page+1)%>?query=<%=query%>" >Next</a>
            <%} %>
        <% } %> 
      <% } %> 
    </div>
    </div>
    <div class="col-lg-3 d-none d-lg-block"><%- include('../partials/sidemenu') %></div>
  </div>
</div>
