<% (layout('/layout/boilerplate')) %>
<div class="container recently-added">
  <div class="row">
    <div class="col-lg-9">
      <h2>All uploaded documents</h2>
      <ul class="recently-added-articles">
        <% for(const content of documents) {%>
        <li>
          <h4>
            <a href="/calmconsultdocuments/<%=content.id %> ">
              <%=content.title %>
            </a>
          </h4>
          <div class="article-muted text-muted">
            <span class="author">
              <small class="authorcapital"> <%= content.authors %> </small>
            </span>
            <span class="publisherDate">
              <small>
                (
                <span class="publisher"> Calm Consult </span>
                <span class="date"> <%=content.publishDate %> </span>
                )
              </small>
            </span>
          </div>
          <p class="article-abstract">
            <%=content.abstract%> 
          </p>
        </li>
        <% } %>
      </ul>
      <div class="pages-show">
        <p class="pr-2 d-none d-md-block">pages</p>
        <% if(pages || page > 1) {%>
          <% if(page>1){ %>
            <% if(id){%>
            <a class="extend-show-more " href="/calmconsult/repoitory/alldocuments/<%=id%>?page=<%=(page-1)%>" >Prev</a>
            <%}else{%>
              <a class="extend-show-more " href="/calmconsult/repoitory/alldocuments?page=<%=(page-1)%>" >Prev</a>
            <%} %> 
            <p class="px-1">...</p>
          <%} %>     
          <% for(let i =page; i<=totalpages; i++){%>
            <% if (id) {%>
              <a class="page-holder <%= page==i&&'active' %> " href="/calmconsult/repoitory/alldocuments/<%=id%>?page=<%=i%>" ><%=i %> </a>
            <%}else{%>
              <a class="page-holder <%= page==i&&'active' %> " href="/calmconsult/repoitory/alldocuments?page=<%=i%>" ><%=i %> </a>
            <% } %>
          <%} %>             
          <% if(page<pages) {%> 
            <p class="px-1">...</p>
            <% if(id){%>
              <a class="extend-show-more " href="/calmconsult/repoitory/alldocuments/<%=id%>?page=<%=(page+1)%>" >Next</a>
              <%}else{%>
                <a class="extend-show-more " href="/calmconsult/repoitory/alldocuments?page=<%=(page+1)%>" >Next</a>
              <%} %>
          <% } %> 
        <% } %> 
      </div>
    </div>
    <div class="col-lg-3 d-none d-lg-block"><%-include('../partials/sidemenu') %></div>
  </div>
</div>
