<%(layout('/layout/boilerplate')) %>
<div class="container single-document">
  <div class="row">
    <div class="col-lg-9 cartegories">
      <h2>Showing <%=cartegories%></h2>
      <ul class="category-list">
        <% for(const collection in data){%>
        <li>
          <a href="/<%=cartegories%>/<%=collection%> "><%=collection %></a>
        </li>
        <%} %>
      </ul>
      <h2><span><%=cartegories%> /</span> <%=currPage %></h2>
      <ul class="recently-added-articles">
        <% for(const content of documents) {%>
        <li>
          <h4>
            <a href="/calmconsultdocuments/<%=content.id %> ">
              <%=content.title %>
            </a>
          </h4>
          <div class="article-muted text-muted">
            <span class="author">
              <% for(const author of content.authors) {%>
              <small class="authorcapital"> <%= author %> </small>
              , <% } %>
            </span>
            <span class="publisherDate">
              <small>
                (
                <span class="publisher"> Calm Consult </span>
                <span class="date"> <%=content.publishDate %> </span>
                )
              </small>
            </span>
          </div>
          <div class="article-abstract">
            The major aim of this study was to develop a records preservation
            system at Uganda Prisons Service [UPS]. The objectives of the study
            were to study the current systems at the Uganda Prisons Service that
            helped to identify
          </div>
        </li>
        <% } %>
      </ul>
    </ul>
    <div class="pages-show">
      <p class="pr-2 d-none d-md-block">pages</p>
      <% if(pages || page > 1) {%>
        <% if(page>1){ %>
          <% if(id){%>
          <a class="extend-show-more " href="/<%=cartegories%>/<%=currPage%>/<%=id%>?page=<%=(page-1)%>" >Prev</a>
          <%}else{%>
            <a class="extend-show-more " href="/<%=cartegories%>/<%=currPage%>?page=<%=(page-1)%>" >Prev</a>
          <%} %> 
          <p class="px-1">...</p>
        <%} %>     
        <% for(let i =page; i<=totalpages; i++){%>
          <% if (id) {%>
            <a class="page-holder <%= page==i&&'active' %> " href="/<%=cartegories%>/<%=currPage%>/<%=id%>?page=<%=i%>" ><%=i %> </a>
          <%}else{%>
            <a class="page-holder <%= page==i&&'active' %> " href="/<%=cartegories%>/<%=currPage%>?page=<%=i%>" ><%=i %> </a>
          <% } %>
        <%} %>             
        <% if(page<pages) {%> 
          <p class="px-1">...</p>
          <% if(id){%>
            <a class="extend-show-more " href="/<%=cartegories%>/<%=currPage%>/<%=id%>?page=<%=(page+1)%>" >Next</a>
            <%}else{%>
              <a class="extend-show-more " href="/<%=cartegories%>/<%=currPage%>?page=<%=(page+1)%>" >Next</a>
            <%} %>
        <% } %> 
      <% } %> 
    </div>
    </div>
    <div class="col-lg-3"><%- include('../partials/sidemenu') %></div>
  </div>
</div>
